package Quesions;

public class Reversing {
public static void main(String[] args) {
	//LOGIC 1
	//Reversing the Number    in this we can perform the Palindrome number also 
	int sum=0;
	int number=2536;
	
	while (number>0){
		sum = sum*10+ number%10;
		number=number/10;
	}
	System.out.println(sum);
	
	//LOGIC 2 
	number = 8575;
	//Converting the int to String
	StringBuffer r = new StringBuffer(String.valueOf(number));
	StringBuffer t=r.reverse();
	
	System.out.println(t);
	
	//LOGIC 3
	
	number =987;
	
	StringBuilder B= new StringBuilder();
	B.append(number);
	//reversing & Storing
	StringBuilder g=B.reverse();
	System.out.println(g);
}
}
