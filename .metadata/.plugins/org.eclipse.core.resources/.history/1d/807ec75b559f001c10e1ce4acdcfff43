package Patterns;

public class Butterfly {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
	int n=4;
	
	for(int i=1;i<=n;i++) {
		//half pattern
	    for(int j=1;j<=i;j++) {
	    	System.out.print("*");
	    }
	    //spaces
	    int spaces =2*(n-i);
	    for(int j=1;j<=spaces;j++) {
	    	System.out.print(" ");
	    }
	    //second half pattern
	    for(int j=1;j<=n;j++) {
	    	System.out.print("*");
	    }
	    System.out.println();
	}
		
		
		
		
		
		
		
		
	}

}
