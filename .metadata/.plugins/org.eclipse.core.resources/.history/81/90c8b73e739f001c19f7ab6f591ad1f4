package Patterns;

public class Diamond {
public static void main(String[] args) {
	
	
/*
 * Diamond pattern
 * 
 * 
 *       *
 *      ***
 *     *****
 *    *******
 *   *********
 *   *********
 *    *******
 *     *****
 *      ***
 *       *
 *  
 *       *
 *      **
 *     ***
 *    ****        logic for this 
 *   *****
 * 
 */
	int n=9;
	for(int i=1;i<=n;i++) {
		for(int j=1;j<=(n-i);j++) {
			System.out.print(" ");			
		}
		for(int j=1;j<=i;j++) {
			System.out.print("*");
		}
		for(int j=2;j<=i;j++) {
			System.out.println("*");
		}
		System.out.println();
	}
	
	
	
	
	
	
	
}
}
